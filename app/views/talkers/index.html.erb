<div class="flex flex-col items-center">
  <h1 class="text-2xl font-bold mb-4">Talker</h1>

  <ul class="w-full">
    <% @talkers.each do |talker| %>
      <% unless talker.archived? %>
        <li class="mb-2">
          <%= link_to talker.name, talker %>
        </li>
      <% end %>
    <% end %>
  </ul>

  <%= link_to "New Talker", new_talker_path, class: "mt-4 text-blue-500" %>
</div>
