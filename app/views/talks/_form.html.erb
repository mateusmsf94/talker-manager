<%= form_with model: [ @talker, @talker.talks.build] do |form| %>
  <p>
    <%= form.label :subject %><br>
    <%= form.text_field :subject %>
  </p>
  <p>
    <%= form.label :time %><br>
    <%= form.time_field :time %>
  </p>
  <p>
    <%= form.label :status %><br>
    <%= form.select :status, %w[public private archived], selected: 'public' %>
  </p>
  <p>
    <%= form.submit %>
  </p>

<% end %>