<% unless talk.archived? %>
  <div class="mb-4">
    <p>
      <strong>Talk:</strong> <%= talk.subject %>
    </p>
    <p>
      <strong>Time:</strong> <%= talk.time %>
    </p>
    <p>
      <%= link_to "Destroy Talk", [talk.talker, talk], data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"} %>
    </p>
  </div>
<% end %>